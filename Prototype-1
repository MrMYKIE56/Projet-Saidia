import 'package:flutter/material.dart';

void main() {
  runApp(const SaidiaApp());
}

class SaidiaApp extends StatelessWidget {
  const SaidiaApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Saidia',
      theme: ThemeData(
        primarySwatch: Colors.green,
        useMaterial3: true,
      ),
      home: const HomePage(),
    );
  }
}

class HomePage extends StatelessWidget {
  const HomePage({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Saidia'),
        centerTitle: true,
      ),
      body: Column(
        children: [
          Padding(
            padding: const EdgeInsets.all(8.0),
            child: TextField(
              decoration: InputDecoration(
                hintText: 'Rechercher une offre...',
                prefixIcon: const Icon(Icons.search),
                border: OutlineInputBorder(
                  borderRadius: BorderRadius.circular(10),
                ),
              ),
            ),
          ),
          Expanded(
            child: ListView.builder(
              itemCount: 5,
              itemBuilder: (context, index) {
                return Card(
                  margin: const EdgeInsets.all(8.0),
                  child: ListTile(
                    leading: const Icon(Icons.fastfood),
                    title: Text('Offre ${index + 1}'),
                    subtitle: const Text('Description de l\'offre'),
                    trailing: ElevatedButton(
                      onPressed: () {},
                      child: const Text('RÃ©server'),
                    ),
                  ),
                );
              },
            ),
          ),
        ],
      ),
    );
  }
}
